@model PortafolioJ.Models.ContactoViewModel

@{
	ViewData["Title"] = "Contacto";
}

<h1>Formulario de contacto </h1>


<form asp-controller="Home" asp-action="Contacto" method="post">
	<div class="mb-3">
    <label for="Nombre" class="form-label">Nombre</label>
	<input type="text" class=" form-control" name="Nombre" placeholder="Sutano"/>
	</div>
	<div class="mb-3"> 
		<label for="Email" class="form-label">Email</label>
	    <input type="email" class="form-control" name="Email" placeholder="ejemplo@gmail.com"/> 
	</div>
	<div class="mb-3">
		<label for="Mensaje" class="form-label">Mensaje</label>
		<textarea class="form-control "  name="Mensaje" rows="3"></textarea>
	</div>
	<button type="submit" class="btn btn-primary btn-danger" style="border-radius: 10px;">Enviar</button>

</form>